{
  "name": "@everipedia/web3-signer",
  "version": "0.0.1",
  "description": "web3-signer",
  "main": "build/module/index.js",
  "type": "module",
  "repository": "https://github.com/EveripediaNetwork/web3-signer",
  "license": "MIT",
  "keywords": [
    "viem",
    "web3",
    "token"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "watch:build": "tsc -p tsconfig.json -w",
    "release": "yarn build:module && tsc-esm-fix --target='build/module' --ext='.js' && changeset publish"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "base-64": "^1.0.0",
    "ethereumjs-util": "^7.1.5",
    "is-valid-domain": "^0.1.6",
    "ms": "^2.1.3",
    "parse-headers": "^2.0.5",
    "to-hex": "0.0.18",
    "viem": "0.1.23"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "changeset": "^0.2.6",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "tsc-esm-fix": "^2.20.12",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "viem": "^0.1.23"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "prettier": {
    "singleQuote": true
  },
  "publishConfig": {
    "access": "public"
  }
}